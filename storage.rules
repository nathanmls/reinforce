rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /profile-images/{userId}.webp {
      allow read: if true;
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType == 'image/webp';
    }
  }
}
